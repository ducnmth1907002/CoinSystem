@model Coin.Models.Currency

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>



<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>  @Html.DisplayNameFor(model => model.Symbol)</th>
                    <th> @Html.DisplayNameFor(model => model.ReleaseDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th> @Html.DisplayNameFor(model => model.Website)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.UpdatedAt)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Symbol)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ReleaseDate)
                    </td>
                    <td class="des">
                        @Html.DisplayFor(model => model.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Website)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.CreatedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.UpdatedAt)
                    </td>
                </tr>
            </tbody>
        </table>
        <br />
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".des").each(function () {
                $(this).html($(this).text())
            })
        });
    </script>
    @Styles.Render("~/bundles/js")
}